{% extends "@views/layouts/layout-default.twig" %}

{# block declare #}

{%
  set viewData = {
    bodyClass: 'impressum-page',
    headerTheme: 'gray',
    footerType: 'primary'
  }
%}

{% block pageContent %}
  {% set impressum_banner = page_data.custom_data.banner %}
  {% set bannerData = {
    top_banner_title: impressum_banner.title,
    top_banner_background: impressum_banner.image,
    top_banner_description: impressum_banner.description,
  } %}
  {% include "@views/components/top-banner/top-banner.twig" with {
    'topBannerData': bannerData,
    classPage: 'impressum',
    theme: 'gray'
  }%}

  {% include "@views/pages/impressum/includes/impressum-content/impressum-content.twig" %}

  {% include "@views/components/get-opportunities/get-opportunities.twig" with {
    btnTheme: 'primary',
  }%}
{% endblock %}
